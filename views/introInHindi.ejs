}
.navBar nav {
  display: flex;
  gap: 1.5rem;
}
.navBar nav a {
  text-decoration: none;
  color: #1a1a1a;
  font-weight: 500;
  transition: color 0.3s;
  font-size: 1vw;
}
.navBar nav a:hover {
  color: #375a9e;
}

/* === Mobile Nav Icons === */
.navBar2 {
  display: none;
  height: 28px;
  width: 28px;
  cursor: pointer;
}

/* === Hero Section === */
.hero {
  display: flex;
  justify-content: space-between;
  gap: 2rem;
  padding: 4rem 2rem;
  flex-wrap: wrap;
}
.hero-text {
  flex: 1 1 55%;
}
.hero-text h2 {
  font-size: clamp(1.5rem, 3vw, 2.8rem);
  font-family: 'Libre Baskerville', serif;
  font-weight: normal;
  margin-bottom: 1rem;
}
.hero-text p {
  font-size: clamp(1rem, 1.4vw, 1.2rem);
  margin-bottom: 1.2rem;
  text-align: justify;
}
.hero-image {
  flex: 1 1 35%;
}
.hero-image img {
  width: 100%;
  height: auto;
  border-radius: 15px;
  object-fit: cover;
}

/* === Navbar Mobile Fullscreen === */
.navbarForMobile {
  position: fixed;
  top: 0;
  right: -100%;
  width: 100%;
  height: 100vh;
  background-color: #f8dcb3;
  z-index: 999;
  transition: right 0.3s ease;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 4rem;
}
.navbarForMobile nav {
  display: flex;
  flex-direction: column;
  gap: 1.5rem;
}
.navbarForMobile nav a {
  text-decoration: none;
  color: #1a1a1a;
  font-weight: 600;
  font-size: 1.6rem;
}
.navbarForMobile nav a:hover {
  color: #375a9e;
}
.navbarForMobile.active {
  right: 0;
}
.removeBtn {
  position: absolute;
  top: 1rem;
  right: 1rem;
  height: 24px;
  width: 24px;
  cursor: pointer;
}

/* === Responsive Breakpoints === */
@media (max-width: 900px) {
  .navBar {
    display: none;
  }
  .navBar2 {
    display: block;
  }
  .hero {
    flex-direction: column;
    padding: 2rem 1rem;
    align-items: center;
    text-align: center;
  }
  .hero-text, .hero-image {
    flex: 1 1 100%;
  }
  .hero-image img {
    width: 90%;
    height: auto;
  }
  .hero-text h2 {
    font-size: 6vw;
  }
  .hero-text p {
    font-size: 4.2vw;
  }
}


